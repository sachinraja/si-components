{
  "name": "si-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm clean && pnpm -r --parallel run build",
    "clean": "pnpm -r --parallel run clean",
    "format": "prettier -w .",
    "lint:format": "prettier -c .",
    "lint:types": "pnpm -r --parallel run type-check",
    "prepare": "husky install",
    "release": "pnpm -r --parallel run release"
  },
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "prettier": "2.5.0",
    "prettier-plugin-pkg": "0.11.1",
    "prettier-plugin-svelte": "2.5.0",
    "rimraf": "3.0.2",
    "simple-icons": "6.0.0",
    "tsup": "5.10.0",
    "typescript": "4.5.2"
  },
  "lint-staged": {
    "*.{ts,svelte,json,md,yml}": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-svelte",
      "./node_modules/prettier-plugin-pkg"
    ]
  }
}
