{
  "name": "si-components",
  "private": true,
  "scripts": {
    "clean": "pnpm -r --parallel run clean",
    "build": "pnpm clean && pnpm -r --parallel run build",
    "release": "pnpm -r --parallel run release",
    "format": "prettier -w .",
    "lint:types": "pnpm -r --parallel run type-check",
    "lint:format": "prettier -c .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/simple-icons": "5.8.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "prettier-plugin-svelte": "2.4.0",
    "rimraf": "3.0.2",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "*.{ts,svelte,json,md,yml}": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
